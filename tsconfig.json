{
  /* https://www.typescriptlang.org/tsconfig */
  /* Most option copied from vscode.git/extensions/shared.tsconfig.json */
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",

  /* The maps are used for debugging only. */
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "module": "node16",
    "moduleResolution": "node16",
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
